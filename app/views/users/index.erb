<h1>all users</h1>

<% User.order(:username).each do |user| %>
  <h3><a href="/users/<%= user.slug %>">
      <%= user.username %></a>
    <% if user.id == current_user || current_user.admin? %>
      <a href="/users/<%= user.slug %>/edit">edit</a>
      <a href="/users/<%= user.slug %>/delete">delete</a>
    <% end %>
  </h3>
<% end %>
